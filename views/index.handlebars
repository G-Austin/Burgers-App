<h1>Burger Time!</h1>

<div id="burgerTable">

<div class="toBeDevoured">
  
  <img src="/images/Cheeseburger.png" alt="picture of a cheeseburger">
  <h2>Burgers that need to be devoured.</h2>

  <div>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devourable=true}}
      {{/unless}}
    {{/each}}
  </div>
</div>

<div class="hasBeenDevoured">

  <img src="/images/emptyPlate.jpg" alt="empty burger plate">
  <h2>Burgers that have been devoured</h2>

  <div>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devourable=false}}
      {{/if}}
    {{/each}}
  </div>
</div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

